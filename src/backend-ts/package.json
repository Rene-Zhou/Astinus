{
  "name": "astinus-backend-ts",
  "version": "0.1.0",
  "description": "Astinus TTRPG Engine - TypeScript Backend (Node.js + Hono)",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@huggingface/transformers": "^3.2.3",
    "ai": "^4.0.28",
    "drizzle-orm": "^0.37.0",
    "hono": "^4.7.11",
    "intl-segmenter-polyfill": "^0.4.4",
    "js-yaml": "^4.1.0",
    "jiti": "^2.4.2",
    "mustache": "^4.2.0",
    "onnxruntime-node": "^1.21.0",
    "vectordb": "^0.11.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/mustache": "^4.2.5",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "drizzle-kit": "^0.31.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
